{
  "name": "jaebe/otlp-tracer",
  "description": "Symfony bundle to allow tracing any method with OpenTelemetry",
  "type": "symfony-bundle",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "symfony/framework-bundle": "^7",
    "open-telemetry/sdk": "^1.7",
    "symfony/http-client": "^7.3"
  },
  "require-dev": {
    "codeception/codeception": "^5.2",
    "codeception/module-rest": "^3.4",
    "codeception/module-symfony": "^3.5",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.0",
    "slevomat/coding-standard": "^8.15",
    "squizlabs/php_codesniffer": "^3.9",
    "symfony/phpunit-bridge": "^7.1"
  },
  "autoload": {
    "psr-4": {
      "Jaebe\\OtlpTracer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jaebe\\OtlpTracer\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "php-http/discovery": true,
      "tbachert/spi": true
    }
  }
}
