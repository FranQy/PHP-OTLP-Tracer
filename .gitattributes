# Auto detect text files and perform LF normalization
* text=auto eol=lf

# PHP files
*.php text eol=lf
*.phpt text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.xml text eol=lf
*.xml.dist text eol=lf
*.json text eol=lf
*.neon text eol=lf

# Documentation
*.md text eol=lf
LICENSE text eol=lf
README text eol=lf

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf
